<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#46b39e">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headerFriends"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/backButtonFriends"
            android:layout_centerVertical="true"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/friends_icon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/backButtonFriends"
            android:id="@+id/friendsIconIV"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite a friend"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/friendsTV"
            android:textSize="25sp"
            android:layout_toRightOf="@+id/friendsIconIV"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/headerFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emptyBlackLineLayoutFriends"
        android:background="#000000"
        >
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bodyFriends"
        android:layout_below="@+id/emptyBlackLineLayoutFriends"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show this QR Code to your friends to share this great experience"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:id="@+id/shareToFriendsTV"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qrcodeIV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/qr_code"
            android:layout_below="@+id/shareToFriendsTV"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qrcodeIV"
            android:layout_alignParentBottom="true"
            android:background="@drawable/invite_friend"
            />
    </RelativeLayout>


