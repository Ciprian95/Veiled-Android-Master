<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="match_parent"
                android:layout_width="250dp"
                android:layout_gravity="start"
                android:dividerHeight="0dp"
                android:background="#80142031">

    <RelativeLayout android:layout_width="300dp"
               android:layout_height="150dp"
               android:id="@+id/imgProfile"
               android:background="#DF5B46"
               android:scaleType="fitXY"
               android:adjustViewBounds="true"
              >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userPicture"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerVertical="true"
        android:src="@drawable/profile_pic"
        />

    <TextView android:layout_width="120dp"
              android:layout_height="40dp"
              android:id="@+id/userName"
              android:gravity="center"
              android:textSize="14sp"
              android:layout_toRightOf="@+id/userPicture"
              android:layout_marginLeft="10dp"
              android:text="Anonymous User"
              android:textColor="@android:color/white"
              />
    </RelativeLayout>
    <ListView android:id="@+id/left_drawer"
              android:layout_width="240dp"
              android:layout_height="match_parent"
              android:layout_gravity="start"
              android:choiceMode="singleChoice"
              android:divider="@android:color/transparent"
              android:dividerHeight="0dp"
              android:layout_marginTop="10dp"
              android:layout_below="@+id/imgProfile"/>
</RelativeLayout><!-- From: file:/C:/Users/Cipi/AndroidStudioProjects/Veiled-Android-Master/app/src/main/res/layout/left_side_panel.xml -->